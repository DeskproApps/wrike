{
  "name": "@deskpro-apps/wrike",
  "title": "Wrike",
  "description": "Connect your Wrike items to tickets in Deskpro to make them easy to view and update",
  "version": "1.1.8",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/wrike",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "settings": {
    "use_deskpro_saas": {
      "title": "One-Click Installation",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": true,
      "order": 1
    },
    "use_access_token": {
      "title": "Use Access Token",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": false,
      "condition": "settings.use_deskpro_saas != true",
      "order": 2
    },
    "instance_url": {
      "title": "Host",
      "description": "Enter the \"Host\" value (e.g., https://app-eu.wrike.com or your appropriate instance). Or leave the field blank to default to https://www.wrike.com",
      "default": "https://www.wrike.com",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "order": 3
    },
    "access_token": {
      "title": "Access Token",
      "description": "You can get the Access Token by following the Setup guide",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true",
      "order": 4
    },
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_deskpro_saas != true",
      "order": 5
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true",
      "order": 6
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/callback"
      },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 7
    },
    "verify_settings": {
      "title": "",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/verify_settings", "height": "30px" },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true",
      "order": 8
    },
    "add_comment_when_linking": {
      "title": "Leave a comment on the task in Wrike when it is linked to a ticket in Deskpro",
      "description": "",
      "type": "boolean",
      "default": false,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 9
    },
    "default_comment_on_ticket_reply": {
      "title": "Ticket reply as comment",
      "description": "Enable option to add Deskpro replies as task notes when a Wrike task is linked to a Deskpro ticket",
      "type": "boolean",
      "default": false,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 10
    },
    "default_comment_on_ticket_note": {
      "title": "Ticket note as comment",
      "description": "Enable option to add Deskpro notes as task comments when a Wrike task is linked to a Deskpro ticket",
      "type": "boolean",
      "default": false,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 11
    }
  },
  "entityAssociations": {
    "linkedWrikeTasks": {
      "entity": "ticket",
      "type": "external_id",
      "title": "Linked Wrike Tasks"
    }
  },
  "proxy": {
    "whitelist": [
      { "url": "https://.*", "methods": ["GET", "POST", "PUT"], "timeout": 20 }
    ]
  }
}